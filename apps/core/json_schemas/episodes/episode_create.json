{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "coding_item": {
      "type": "object",
      "properties": {
        "system": {
          "type": "string",
          "description": "Dictionary: TBD"
        },
        "code": {
          "type": "string",
          "description": "Symbol in syntax defined by the system"
        },
        "display": {
          "type": "string",
          "description": "Representation defined by the system"
        }
      },
      "required": [
        "code"
      ],
      "additionalProperties": false
    },
    "coding": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/coding_item"
      }
    },
    "codeable_concept": {
      "type": "object",
      "properties": {
        "coding": {
          "$ref": "#/definitions/coding"
        },
        "text": {
          "type": "string"
        }
      },
      "required": [
        "coding"
      ],
      "additionalProperties": false
    },
    "identifier": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/codeable_concept"
        },
        "value": {
          "type": "string",
          "description": "The value that is unique"
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "$ref": "#/definitions/uuid"
    },
    "type": {
      "type": "string",
      "enum": [
        "primary_care"
      ],
      "description": "Dictionary: TBD"
    },
    "status": {
      "type": "string",
      "enum": [
        "active"
      ],
      "description": "Dictionary: TBD"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "managing_organization": {
      "type": "object",
      "properties": {
        "identifier": {
          "$ref": "#/definitions/identifier"
        }
      }
    },
    "period": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date-time",
          "description": "C? Starting time with inclusive boundary"
        }
      },
      "required": [
        "start"
      ],
      "additionalProperties": false
    },
    "care_manager": {
      "type": "object",
      "properties": {
        "identifier": {
          "$ref": "#/definitions/identifier"
        }
      }
    }
  },
  "required": [
    "id",
    "type",
    "status",
    "name",
    "managing_organization",
    "period",
    "care_manager"
  ]
}
