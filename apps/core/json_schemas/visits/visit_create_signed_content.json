{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "value": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "comparator": {
          "type": "string"
        },
        "unit": {
          "type": "string"
        },
        "system": {
          "type": "string"
        },
        "code": {
          "type": "string"
        }
      },
      "required": [
        "value"
      ]
    },
    "value_quantity": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "comparator": {
          "type": "string",
          "enum": [
            ">",
            ">=",
            "=",
            "<=",
            "<"
          ]
        },
        "unit": {
          "type": "string",
          "description": "Dictionary: TBD"
        },
        "system": {
          "type": "string",
          "description": "Dictionary: TBD"
        },
        "code": {
          "type": "string",
          "description": "Dictionary: TBD"
        }
      }
    },
    "value_codeable_concept": {
      "type": "object",
      "properties": {
        "coding": {
          "$ref": "#/definitions/coding"
        }
      }
    },
    "value_sampled_data": {
      "type": "object",
      "properties": {
        "origin": {
          "type": "number"
        },
        "period": {
          "type": "number"
        },
        "factor": {
          "type": "number"
        },
        "lowerLimit": {
          "type": "number"
        },
        "upperLimit": {
          "type": "number"
        },
        "dimensions": {
          "type": "number"
        },
        "data": {
          "type": "number"
        }
      },
      "required": [
        "data"
      ]
    },
    "value_range": {
      "type": "object",
      "properties": {
        "low": {
          "$ref": "#/definitions/value_quantity"
        },
        "high": {
          "$ref": "#/definitions/value_quantity"
        }
      }
    },
    "value_ratio": {
      "type": "object",
      "properties": {
        "numerator": {
          "$ref": "#/definitions/value_quantity"
        },
        "denominator": {
          "$ref": "#/definitions/value_quantity"
        }
      }
    },
    "period": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date-time",
          "description": "C? Starting time with inclusive boundary"
        },
        "end": {
          "type": "string",
          "format": "date-time",
          "description": "C? End time with inclusive boundary, if not ongoing"
        }
      },
      "required": [
        "start"
      ],
      "additionalProperties": false
    },
    "coding": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "system": {
            "type": "string",
            "description": "Dictionary: TBD"
          },
          "code": {
            "type": "string",
            "description": "Symbol in syntax defined by the system"
          },
          "display": {
            "type": "string",
            "description": "Representation defined by the system"
          }
        },
        "required": [
          "system",
          "code"
        ]
      }
    },
    "class": {
      "type": "object",
      "properties": {
        "system": {
          "type": "string"
        },
        "code": {
          "type": "string",
          "description": "Symbol in syntax defined by the system"
        },
        "display": {
          "type": "string",
          "description": "Representation defined by the system"
        }
      },
      "required": [
        "code"
      ]
    },
    "identifier": {
      "type": "object",
      "properties": {
        "type": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/coding"
            }
          },
          "description": "Description of identifier"
        },
        "value": {
          "type": "string",
          "description": "The value that is unique"
        }
      },
      "required": [
        "value"
      ]
    },
    "role": {
      "type": "object",
      "properties": {
        "coding": {
          "$ref": "#/definitions/coding"
        }
      },
      "description": "Role that this diagnosis has within the episode of care"
    },
    "body_site": {
      "type": "object",
      "properties": {
        "coding": {
          "$ref": "#/definitions/coding"
        }
      }
    },
    "action": {
      "type": "object",
      "properties": {
        "coding": {
          "$ref": "#/definitions/coding"
        }
      }
    },
    "reason": {
      "type": "object",
      "properties": {
        "coding": {
          "$ref": "#/definitions/coding"
        }
      }
    },
    "evidence": {
      "type": "object",
      "properties": {
        "code": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "coding": {
                "$ref": "#/definitions/coding"
              }
            }
          }
        },
        "detail": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "identifier": {
                "$ref": "#/definitions/identifier"
              }
            }
          }
        }
      }
    },
    "diagnosis": {
      "type": "object",
      "properties": {
        "condition": {
          "type": "object",
          "properties": {
            "identifier": {
              "$ref": "#/definitions/identifier"
            }
          },
          "description": "should be filled one of: condition or condition_id"
        },
        "role": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/coding"
            }
          },
          "description": "Role that this diagnosis has within the episode of care"
        },
        "rank": {
          "type": "number",
          "description": "Ranking of the diagnosis (for each role type)"
        }
      },
      "required": [
        "role"
      ]
    },
    "condition": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid"
        },
        "context": {
          "type": "object",
          "properties": {
            "identifier": {
              "$ref": "#/definitions/identifier"
            }
          }
        },
        "code": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/coding"
            }
          }
        },
        "clinical_status": {
          "type": "string",
          "description": "Dictionary: TBD"
        },
        "verification_status": {
          "type": "string",
          "description": "Dictionary: TBD"
        },
        "severity ": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/coding"
            }
          }
        },
        "body_sites": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/body_site"
          }
        },
        "onset_date": {
          "type": "string",
          "format": "date"
        },
        "stage": {
          "type": "object",
          "properties": {
            "summary": {
              "type": "object",
              "properties": {
                "coding": {
                  "$ref": "#/definitions/coding"
                }
              }
            }
          },
          "required": [
            "summary"
          ]
        },
        "evidences": {
          "$ref": "#/definitions/evidence"
        }
      },
      "required": [
        "id",
        "context",
        "code",
        "clinical_status",
        "verification_status",
        "onset_date"
      ]
    },
    "encounter": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid"
        },
        "status": {
          "type": "string"
        },
        "contexts": {
          "type": "array",
          "minItems": 2,
          "properties": {
            "identifier": {
              "$ref": "#/definitions/identifier"
            }
          }
        },
        "period": {
          "$ref": "#/definitions/period"
        },
        "class": {
          "#ref": "#/definitions/class"
        },
        "type": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/coding"
            }
          }
        },
        "incoming_referrals": {
          "type": "string"
        },
        "reasons": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/reason"
          }
        },
        "diagnoses": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/diagnosis"
          }
        },
        "actions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/action"
          }
        },
        "division": {
          "type": "object",
          "properties": {
            "identifier": {
              "$ref": "#/definitions/identifier"
            }
          }
        }
      },
      "required": [
        "id",
        "status",
        "contexts",
        "period",
        "class",
        "type",
        "reasons",
        "diagnoses",
        "actions",
        "division"
      ]
    },
    "observation": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid"
        },
        "status": {
          "type": "string"
        },
        "context": {
          "type": "object",
          "properties": {
            "identifier": {
              "$ref": "#/definitions/identifier"
            }
          }
        },
        "based_on": {
          "type": "object",
          "properties": {
            "identifier": {
              "$ref": "#/definitions/identifier"
            }
          }
        },
        "category": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/coding"
            }
          }
        },
        "code": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/coding"
            }
          }
        },
        "effective_date_time": {
          "type": "string",
          "format": "date-time"
        },
        "effective_period": {
          "$ref": "#/definitions/period"
        },
        "issued": {
          "type": "string",
          "format": "date-time"
        },
        "performer": {
          "type": "object",
          "properties": {
            "identifier": {
              "$ref": "#/definitions/identifier"
            }
          }
        },
        "interpretation": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/coding"
            }
          }
        },
        "comment": {
          "type": "string"
        },
        "body_side": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/coding"
            }
          }
        },
        "method": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/coding"
            }
          }
        },
        "value_quantity": {
          "$ref": "#/definitions/value_quantity"
        },
        "value_codeable_concept": {
          "$ref": "#/definitions/value_codeable_concept"
        },
        "value_sampled_data": {
          "$ref": "#/definitions/value_sampled_data"
        },
        "value_string": {
          "type": "string"
        },
        "value_boolean": {
          "type": "boolean"
        },
        "value_range": {
          "$ref": "#/definitions/value_range"
        },
        "value_ratio": {
          "$ref": "#/definitions/value_ratio"
        },
        "value_time": {
          "type": "string",
          "format": "date-time"
        },
        "value_date_time": {
          "type": "string",
          "format": "date"
        },
        "value_period": {
          "$ref": "#/definitions/period"
        },
        "reference_range": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "low": {
                "$ref": "#/definitions/value"
              },
              "high": {
                "$ref": "#/definitions/value"
              },
              "type": {
                "type": "object",
                "properties": {
                  "coding": {
                    "$ref": "#/definitions/coding"
                  }
                }
              },
              "applies_to": {
                "type": "object",
                "properties": {
                  "coding": {
                    "$ref": "#/definitions/coding"
                  }
                }
              },
              "age": {
                "type": "object",
                "properties": {
                  "low": {
                    "$ref": "#/definitions/value"
                  },
                  "high": {
                    "$ref": "#/definitions/value"
                  }
                }
              },
              "text": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "encounter": {
      "$ref": "#/definitions/encounter"
    },
    "conditions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/condition"
      }
    },
    "observations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/observation"
      }
    },
    "allergy_intolerances": {},
    "immunizations": {}
  },
  "required": [
    "encounter"
  ]
}
