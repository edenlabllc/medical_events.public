{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "period": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date-time",
          "description": "C? Starting time with inclusive boundary"
        },
        "end": {
          "type": "string",
          "format": "date-time",
          "description": "C? End time with inclusive boundary, if not ongoing"
        }
      },
      "required": [
        "start"
      ],
      "additionalProperties": false
    },
    "visit": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid"
        },
        "period": {
          "$ref": "#/definitions/period"
        }
      },
      "required": [
        "id",
        "period"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "visits": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/visit"
      }
    },
    "signed_data": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "required": [
    "signed_data"
  ],
  "additionalProperties": false
}
