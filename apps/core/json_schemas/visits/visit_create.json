{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "period": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date-time",
          "description": "C? Starting time with inclusive boundary"
        },
        "end": {
          "type": "string",
          "format": "date-time",
          "description": "C? End time with inclusive boundary, if not ongoing"
        }
      },
      "required": [
        "start"
      ],
      "additionalProperties": false
    },
    "code": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "system": {
            "type": "string",
            "description": "Dictionary TBD"
          },
          "code": {
            "type": "string",
            "description": "Symbol in syntax defined by the system"
          },
          "display": {
            "type": "string",
            "description": "Representation defined by the system"
          }
        },
        "required": [
          "code"
        ]
      }
    },
    "identifier": {
      "type": "object",
      "properties": {
        "type": {
          "type": "object",
          "properties": {
            "coding": {
              "$ref": "#/definitions/code"
            }
          },
          "description": "Description of identifier"
        },
        "value": {
          "type": "string",
          "description": "The value that is unique"
        }
      },
      "required": [
        "value"
      ]
    },
    "role": {
      "type": "object",
      "properties": {
        "coding": {
          "$ref": "#/definitions/code"
        }
      },
      "description": "Role that this diagnosis has within the episode of care"
    },
    "condition": {
      "type": "object",
      "properties": {
        "identifier": {
          "$ref": "#/definitions/identifier"
        }
      },
      "description": "should be filled one of: condition or condition_id"
    },
    "visit": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid"
        },
        "period": {
          "$ref": "#/definitions/period"
        }
      },
      "required": [
        "id",
        "period"
      ],
      "additionalProperties": false
    },
    "diagnosis": {
      "type": "object",
      "properties": {
        "condition": {
          "$ref": "#/definitions/condition"
        },
        "role": {
          "$ref": "#/definitions/role"
        },
        "rank": {
          "type": "integer",
          "minimum": 0,
          "exclusiveMinimum": true,
          "description": "Ranking of the diagnosis (for each role type)"
        }
      },
      "required": [
        "role"
      ]
    },
    "patient": {
      "type": "object",
      "properties": {
        "identifier": {
          "$ref": "#/definitions/identifier"
        }
      }
    },
    "managing_organisation": {
      "type": "object",
      "properties": {
        "identifier": {
          "$ref": "#/definitions/identifier"
        }
      }
    },
    "care_manager": {
      "type": "object",
      "properties": {
        "identifier": {
          "$ref": "#/definitions/identifier"
        }
      }
    },
    "episode": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid"
        },
        "type": {
          "type": "string",
          "description": "Dictionary TBD"
        },
        "status": {
          "type": "string",
          "description": "Dictionary TBD"
        },
        "diagnoses": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/role"
          }
        },
        "patient": {
          "$ref": "#/definitions/patient"
        },
        "managing_organization": {
          "$ref": "#/definitions/managing_organisation"
        },
        "period": {
          "$ref": "#/definitions/period"
        },
        "care_manager": {
          "$ref": "#/definitions/care_manager"
        }
      },
      "required": [
        "id",
        "type",
        "diagnoses",
        "patient",
        "managing_organization",
        "period",
        "care_manager"
      ]
    }
  },
  "type": "object",
  "properties": {
    "episodes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/episode"
      }
    },
    "visits": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/visit"
      }
    },
    "signed_data": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "required": [
    "signed_data"
  ],
  "additionalProperties": false
}
