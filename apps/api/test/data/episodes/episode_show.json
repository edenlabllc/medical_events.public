{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "period": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date-time",
          "description": "C? Starting time with inclusive boundary"
        },
        "end": {
          "type": "string",
          "format": "date-time",
          "description": "C? End time with inclusive boundary, if not ongoing"
        }
      },
      "required": [
        "start"
      ],
      "additionalProperties": false
    },
    "identifier": {
      "type": "object",
      "required": [
        "identifier"
      ]
    },
    "coding": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/coding_item"
      }
    },
    "coding_item": {
      "type": "object",
      "properties": {
        "system": {
          "type": "string",
          "enum": [
            "eHealth/resources"
          ]
        },
        "code": {
          "type": "string",
          "description": "Symbol in syntax defined by the system"
        },
        "display": {
          "type": "string",
          "description": "Representation defined by the system"
        }
      },
      "required": [
        "code",
        "system"
      ],
      "additionalProperties": false
    },
    "codeable_concept": {
      "type": "object",
      "properties": {
        "coding": {
          "$ref": "#/definitions/coding"
        },
        "text": {
          "type": "string"
        }
      },
      "required": [
        "coding"
      ],
      "additionalProperties": false
    },
    "reference": {
      "type": "object",
      "properties": {
        "identifier": {
          "type": "object",
          "properties": {
            "type": {
              "$ref": "#/definitions/codeable_concept"
            },
            "value": {
              "$ref": "#/definitions/uuid"
            }
          }
        }
      }
    },
    "diagnosis": {
      "type": "object",
      "properties": {
        "condition": {
          "$ref": "#/definitions/reference"
        },
        "role": {
          "$ref": "#/definitions/codeable_concept"
        },
        "code": {
          "$ref": "#/definitions/codeable_concept"
        },
        "rank": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": true
    },
    "diagnoses_history": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "is_active": {
            "type": "boolean"
          },
          "evidence": {
            "$ref": "#/definitions/reference"
          },
          "diagnoses": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/diagnosis"
            }
          }
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "$ref": "#/definitions/uuid"
    },
    "type": {
      "type": "string",
      "enum": [
        "primary_care"
      ],
      "description": "Dictionary: TBD"
    },
    "status": {
      "type": "string",
      "enum": [
        "active"
      ],
      "description": "Dictionary: TBD"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "period": {
    },
    "managing_organization": {
    },
    "care_manager": {
    },
    "patient_id": {
      "description": "Patient's id"
    },
    "closing_summary": {
      "type": "string",
      "description": "Closing summary"
    },
    "explanatory_letter": {
      "type": "string",
      "description": "Explanatory letter"
    },
    "closing_reason": {
      "description": "Closing reason"
    },
    "closing_reason": {
      "$ref": "#/definitions/codeable_concept"
    },
    "cancellation_reason": {
      "$ref": "#/definitions/codeable_concept"
    },
    "diagnoses_history": {
      "$ref": "#/definitions/diagnoses_history"
    }
  },
  "required": [
    "id",
    "type",
    "status",
    "name",
    "period",
    "managing_organization",
    "care_manager",
    "patient_id",
    "diagnoses_history",
    "inserted_at",
    "closing_summary",
    "closing_reason",
    "explanatory_letter",
    "cancellation_reason"
  ]
}
